{
  "name": "postcss-token-utilities",
  "version": "1.0.1",
  "description": "Token-driven utility CSS generator for PostCSS with JIT-style injection.",
  "author": "Viraj Gamdha <viraj@aplance.com>",
  "license": "MIT",
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "postcss": true,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "node -e \"fs.rmSync('./dist', {recursive: true, force: true})\" && mkdir dist",
    "clean-build": "npm run clean && npm run build",
    "clean-pack": "npm run clean-build && npm pack"
  },
  "keywords": [
    "postcss",
    "postcss-plugin",
    "css",
    "utilities",
    "jit",
    "design-tokens",
    "css-variables",
    "lightweight"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viraj-gamdha/postcss-token-utilities.git"
  },
  "bugs": {
    "url": "https://github.com/viraj-gamdha/postcss-token-utilities/issues"
  },
  "homepage": "https://github.com/viraj-gamdha/postcss-token-utilities#readme",
  "peerDependencies": {
    "postcss": "^8.4"
  },
  "dependencies": {
    "cssnano": "^7.1.2",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^24.10.1",
    "postcss": "^8.5.6",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3"
  }
}
